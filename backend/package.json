{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "watch": "tsc -w -p tsconfig-build.json",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "yarn run build && docker-compose up -d",
    "down": "docker-compose down",
    "up:sudo": "yarn run build && sudo docker-compose up -d",
    "down:sudo": "sudo docker-compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -c jest-unit-config.js",
    "test:integration": "yarn test --watch -c jest-integration-config.js",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "migrate:save": "prisma migrate save --experimental",
    "migrate:up": "prisma migrate up --experimental",
    "migrate:down": "prisma migrate down --experimental"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.2",
    "@types/jest": "^26.0.14",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.11.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "3",
    "eslint": "7",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "faker": "^5.1.0",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "lint-staged": "^10.4.0",
    "rimraf": "^3.0.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@prisma/cli": "^2.9.0",
    "@prisma/client": "^2.9.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "multer": "^1.4.2",
    "nodemon": "^2.0.5",
    "pg": "^8.4.2",
    "typeorm": "^0.2.29"
  },
  "engines": {
    "node": "12.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
