datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Orphanage {
  id Int @id @default(autoincrement())
  name String
  latitude Float
  longitude Float
  whatsapp String
  about String
  instructions String
  opening_hours String
  open_on_weekend Boolean
  approved Boolean
}

model OrphanageImage {
  id Int @id @default(autoincrement())
  name String
  orphanage Orphanage @relation(fields: [orphanageId], references: [id])
  orphanageId Int
}